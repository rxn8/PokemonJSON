<Window x:Class="PokemonJSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonJSON"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstPokemon" Margin="0,225,0,0" SelectionChanged="lstPokemon_SelectionChanged"/>
        <TextBlock x:Name="txtHeight" HorizontalAlignment="Left" Margin="100,50,0,0" Text="Height" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="32"/>
        <TextBlock x:Name="txtWeight" HorizontalAlignment="Left" Margin="100,100,0,0" Text="Weight" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="32"/>
        <Image x:Name="imgPokemon" HorizontalAlignment="Left" Height="100" Margin="550,50,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
